/*Faça um programa que exiba os números de 1 (inclusive) a 10 (inclusive) em ordem decrescente*/
programa
{
	inclua biblioteca Util --> tempo
	inteiro num
	
	funcao inicio()
	{
		num = 11
		escreva("Números de 10 a 1\n")
		tempo.aguarde(1000)
		
		enquanto (num > 1) {
			num = num - 1
			escreva(num, "\n")
			tempo.aguarde(1000)
		}
	}
}
